<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/appwallpaper">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fillViewport="false"

            android:layout_marginBottom="60dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="11"
            android:orientation="horizontal"
            android:layout_below="@id/textView">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/tside"
            android:orientation="vertical"
            >

        <ImageButton
            android:layout_width="145dp"
            android:layout_height="110dp"
            android:id="@+id/btnDust2"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/dust2"
            android:scaleType="fitCenter"
            android:onClick="dust2"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="145dp"
            android:layout_height="110dp"
            android:id="@+id/btnCache"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/cache"
            android:scaleType="fitCenter"
            android:onClick="cache"
            android:layout_below="@+id/btnDust2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="145dp"
            android:layout_height="110dp"
            android:id="@+id/btnCobblestone"
            android:layout_row="1"
            android:onClick="cobblestone"
            android:layout_column="0"
            android:src="@drawable/cobblestone"
            android:scaleType="fitCenter"
            android:layout_below="@+id/btnCache"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"/>

                <ImageButton
                    android:layout_width="145dp"
                    android:layout_height="110dp"
                    android:id="@+id/btnNuke"
                    android:layout_row="3"
                    android:onClick="nuke"
                    android:layout_column="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/nuke"
                    android:layout_below="@+id/btnCobblestone"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"/>
                </LinearLayout>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/ctside"
            android:layout_toRightOf="@id/tside"
            android:orientation="vertical">

        <ImageButton
            android:layout_width="145dp"
            android:layout_height="110dp"
            android:id="@+id/btnInferno"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/inferno"
            android:scaleType="fitCenter"
            android:onClick="inferno"
            android:layout_alignTop="@+id/btnDust2"
            android:layout_alignLeft="@+id/btnOverpass"
            android:layout_alignStart="@+id/btnOverpass"
            android:layout_gravity="center_horizontal"/>

                <ImageButton
                    android:layout_width="145dp"
                    android:layout_height="110dp"
                    android:id="@+id/btnMirage"
                    android:layout_row="2"
                    android:onClick="mirage"
                    android:layout_column="0"
                    android:src="@drawable/mirage"
                    android:layout_below="@+id/btnInferno"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside" />

                <ImageButton
            android:layout_width="145dp"
            android:layout_height="110dp"
            android:id="@+id/btnOverpass"
            android:layout_row="2"
            android:onClick="overpass"
            android:layout_column="1"
            android:src="@drawable/overpass"
            android:scaleType="fitCenter"
            android:layout_below="@+id/btnMirage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="145dp"
            android:layout_height="110dp"
            android:id="@+id/btnTrain"
            android:layout_row="3"
            android:onClick="train"
            android:layout_column="0"
            android:scaleType="fitCenter"
            android:src="@drawable/train"
            android:layout_below="@+id/btnOverpass"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"/>

        </LinearLayout>
</LinearLayout>
                        </RelativeLayout>
        </ScrollView>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-6033901903111612/4565100081">
        </com.google.android.gms.ads.AdView>

</RelativeLayout>
