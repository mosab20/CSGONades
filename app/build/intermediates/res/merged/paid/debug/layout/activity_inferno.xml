<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.csgonades.Inferno"
    android:id="@+id/dust2"
    android:background="@drawable/nadesback">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="false"
        android:layout_marginBottom="60dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Smokes"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="9"
                android:orientation="horizontal"
                android:layout_below="@id/textView">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:id="@+id/tside"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="T Side"
                android:id="@+id/textView2"

                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="from mid to arches"
                    android:id="@+id/ismoke1"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:onClick="smoke1"
                    android:layout_below="@+id/ismoke9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="from mid to the left of the hay wagon at a"
                    android:id="@+id/ismoke5"
                    android:layout_row="3"
                    android:onClick="smoke5"
                    android:layout_column="0"
                    android:layout_below="@+id/ismoke3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="from mid to library"
                    android:id="@+id/ismoke3"
                    android:layout_row="2"
                    android:onClick="smoke3"
                    android:layout_column="0"
                    android:layout_below="@+id/ismoke12"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="from mid to porch side"
                    android:id="@+id/ismoke7"
                    android:layout_row="4"
                    android:onClick="smoke7"
                    android:layout_column="0"
                    android:layout_below="@+id/ismoke11"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="from mid to arch side"
                    android:id="@+id/ismoke9"
                    android:layout_row="5"
                    android:onClick="smoke9"
                    android:layout_column="0"
                    android:layout_below="@+id/ismoke7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="From Banana to B CT"
                    android:id="@+id/ismoke11"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:onClick="smoke11"
                    android:layout_below="@+id/ismoke5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="From banana to b coffins"
                    android:id="@+id/ismoke12"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:onClick="smoke12"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
</LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:id="@+id/ctside"
                android:layout_toRightOf="@id/tside"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CT Side"
                android:id="@+id/textView3"
                android:layout_below="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                />





        <Button
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="from arches to a mid"
            android:id="@+id/ismoke4"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="smoke4"
            android:layout_below="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <Button
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="from b site to deep banana"
            android:id="@+id/ismoke6"
            android:layout_row="3"
            android:onClick="smoke6"
            android:layout_column="1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ismoke4"
            android:layout_alignParentEnd="true" />


            </LinearLayout>

</LinearLayout>

        </RelativeLayout>>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6033901903111612/3629888489">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
